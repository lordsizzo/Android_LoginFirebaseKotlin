<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/teal_700"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_height="wrap_content">
                    <TextView

                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Inicia sesión con tus Gmail ó con tu correo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:animateLayoutChanges="true"
                        android:visibility="visible"
                        android:id="@+id/campoRegistro"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCorreo"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@color/white"
                                android:id="@+id/etCorreo"
                                android:layout_width="match_parent"
                                android:hint="Introduce tu correo"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/tilPass"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:background="@color/white"
                                    android:id="@+id/etPass"
                                    android:layout_width="match_parent"
                                    android:hint="Contraseña"
                                    android:layout_height="wrap_content"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/tilPassConfirm"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:background="@color/white"
                                    android:id="@+id/etPassConfirm"
                                    android:layout_width="match_parent"
                                    android:hint="Confirmar"
                                    android:layout_height="wrap_content"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCorreo"
                            android:layout_margin="5dp"
                            app:backgroundTint="@color/verde_creativity"
                            android:text="Registrar"
                            android:textColor="@color/blanco"
                            android:pointerIcon="arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:animateLayoutChanges="true"
                        android:id="@+id/campoLogin"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCorreoLogin"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@color/white"
                                android:id="@+id/etCorreoLogin"
                                android:layout_width="match_parent"
                                android:hint="Correo"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/tilPassLogin"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:background="@color/white"
                                    android:id="@+id/etPassLogin"
                                    android:layout_width="match_parent"
                                    android:hint="Contraseña"
                                    android:layout_height="wrap_content"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnRecuperarPass"
                            android:layout_margin="5dp"
                            app:backgroundTint="@color/azul_creativity"
                            android:text="Recuperar Contraseña"
                            android:textColor="@color/blanco"
                            android:pointerIcon="arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnLogin"
                            android:layout_margin="5dp"
                            app:backgroundTint="@color/verde_creativity"
                            android:text="Entrar"
                            android:textColor="@color/blanco"
                            android:pointerIcon="arrow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/btnYaTengoCuenta"
                        android:layout_margin="10dp"
                        android:textColor="@color/morado_creativity"
                        android:textSize="18dp"
                        android:gravity="right"
                        android:text="Ya tengo cuenta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/btnRegistrar"
                        android:layout_margin="10dp"
                        android:textColor="@color/morado_creativity"
                        android:textSize="18dp"
                        android:gravity="right"
                        android:text="Registrarse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/grey_100"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnGoogle"
                        android:layout_margin="5dp"
                        android:textColor="@color/blanco"
                        app:backgroundTint="@color/google_color_button"
                        android:text="Google"
                        android:pointerIcon="arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



                <!--<EditText
                    android:id="@+id/usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnEntrar"
                    android:text="Entrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>